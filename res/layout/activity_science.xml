<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ScienceActivity" >
	<com.ui.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.ui.TitleLayout>
   <TextView
        android:id="@+id/susername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
	<Button 
	    android:id="@+id/addgrade"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="添加科目成绩"
	    />
	<Button 
	    android:id="@+id/searchChinese"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询语文成绩"
	    />
	<Button 
	    android:id="@+id/searchMath"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询数学成绩"
	    />
	<Button 
	    android:id="@+id/searchEnglish"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询英语成绩"
	    />
	<Button 
	    android:id="@+id/searchPhysical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询物理成绩"
	    />
	<Button 
	    android:id="@+id/searchChemistry"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询化学成绩"
	    />
	<Button 
	    android:id="@+id/searchBiology"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询生物成绩"
	    />
	<Button 
	    android:id="@+id/searchTotal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查询总的成绩"
	    />

</LinearLayout>
</ScrollView>